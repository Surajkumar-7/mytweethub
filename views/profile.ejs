<!DOCTYPE html>
<html>

<head>
  <title><%= username %>'s Profile</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style>
    :root {
      --bg: #2E2F3E;
      --card: #7F8CAA;
      --accent: #B8CFCE;
      --text-sub: #bbb;
      --text-bio: #ccc;
    }

    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background-color: var(--bg);
      color: white;
      display: flex;
      justify-content: center;
    }

    .wrapper {
      width: 100%;
      max-width: 650px;
      padding: 20px 16px 60px;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
    }

    .logo {
      font-size: 26px;
      font-weight: bold;
    }

    .back {
      color: #fff;
      text-decoration: none;
      font-size: 16px;
    }

    .profile-card {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      margin: 30px 0;
    }

    .avatar {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      object-fit: cover;
      border: 3px solid #fff;
    }

    .bio {
      margin: 10px 0 6px;
      color: var(--text-bio);
      font-style: italic;
      white-space: pre-line;
    }

    .joined {
      color: var(--text-sub);
      font-size: 14px;
    }

    .edit-btn {
      margin-top: 15px;
      background: var(--accent);
      color: #000;
      border: none;
      border-radius: 6px;
      padding: 10px 20px;
      cursor: pointer;
    }

    .tweet {
      background: var(--card);
      border-radius: 10px;
      padding: 15px 18px;
      margin-top: 18px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.12);
    }

    .tweet-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 6px;
    }

    .tweet .username {
      font-weight: bold;
    }

    .tweet .time {
      font-size: 12px;
      color: #ddd;
    }

    .actions {
      margin-top: 8px;
      display: flex;
      gap: 10px;
    }

    .actions form button {
      background: none;
      border: none;
      color: #fff;
      cursor: pointer;
    }

    .comment-section {
      margin-top: 14px;
    }

    .comment {
      background: #f0f2f5;
      color: #000;
      border-radius: 6px;
      padding: 6px 10px;
      font-size: 14px;
      margin-top: 6px;
    }

    @media (max-width: 500px) {
      .logo {
        font-size: 22px;
      }

      .avatar {
        width: 90px;
        height: 90px;
      }
    }
  </style>
</head>

<body>
  <div class="wrapper">
    <div class="header">
      <div class="logo"><%= username %>'s Tweets</div>
      <a class="back" href="/feed">‚Üê Back to Feed</a>
    </div>

    <div class="profile-card">
      <img class="avatar" src="<%= profile.avatar_url || '/uploads/default-avatar.png' %>" alt="Avatar">

      <div style="margin-top: 10px; font-size: 15px; color: #ccc;">
        <strong><%= followerCount %></strong> Followers &nbsp;‚Ä¢&nbsp;
        <strong><%= followingCount %></strong> Following
      </div>

      <div class="bio"><%= profile.bio %></div>

      <div class="joined">
        Joined: <%= profile.join_date ? new Date(profile.join_date).toDateString() : 'Join date not available' %>
      </div>

      <% if (isOwner) { %>
        <form action="/edit-profile" method="GET">
          <button class="edit-btn">Edit Profile</button>
        </form>
      <% } else { %>
        <form method="POST" action="/<%= isFollowing ? 'unfollow' : 'follow' %>/<%= profile.username %>">
          <button class="edit-btn" style="background-color: <%= isFollowing ? '#ccc' : '#4CAF50' %>;">
            <%= isFollowing ? 'Unfollow' : 'Follow' %>
          </button>
        </form>
      <% } %>
    </div>

    <% if (tweets.length === 0) { %>
      <p>No tweets from <%= username %> yet.</p>
    <% } %>

    <% tweets.forEach(tweet => { %>
      <div class="tweet">
        <div class="tweet-header">
          <span class="username"><%= tweet.username %></span>
          <span class="time"><%= new Date(tweet.time).toLocaleString() %></span>
        </div>
        <p><%= tweet.content %></p>

        <div class="actions">
          <form action="/like/<%= tweet.id %>" method="POST">
            <button type="submit">‚ù§Ô∏è <%= tweet.likes %></button>
          </form>
          <% if (isOwner) { %>
            <form action="/delete/<%= tweet.id %>" method="POST">
              <button type="submit">üóëÔ∏è</button>
            </form>
          <% } %>
        </div>

        <div class="comment-section">
          <% if (!tweet.comments || tweet.comments.length === 0) { %>
            <p style="font-size: 13px;">No comments yet.</p>
          <% } else { %>
            <% tweet.comments.forEach(comment => { %>
              <div class="comment"><%= comment.username %>: <%= comment.comment %></div>
            <% }) %>
          <% } %>
        </div>
      </div>
    <% }); %>
  </div>
</body>

</html>
